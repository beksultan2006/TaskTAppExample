<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        app:cardBackgroundColor="@color/color_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="230dp" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_view"
            app:civ_circle_background_color="@color/white"
            app:civ_border_color="@color/color_main"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:civ_border_width="0.1dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="53dp"
            android:src="@drawable/ic_person"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:hint="User"
            android:textColorHint="@color/black"
            android:textSize="22sp"
            android:background="@color/purple_900"
            android:paddingStart="20dp"
            android:layout_marginTop="90dp"
            android:layout_marginStart="168dp"
            android:id="@+id/et_text"
            android:layout_width="180dp"
            android:layout_height="48dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_marginTop="150dp"
            android:layout_marginStart="188dp"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_900"
            android:text="Save"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:cornerRadius="50dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/edit_pen"
            android:background="@color/purple_900"
            android:layout_marginTop="140dp"
            android:layout_marginStart="130dp"
            android:src="@drawable/ic_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_profile"
        android:text="My Profile"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/ic_person"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view2"
        android:background="@color/black"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/txt_profile"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <TextView
        android:id="@+id/txt_settings"
        android:text="Settings"
        android:drawablePadding="6dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:drawableStart="@drawable/ic_settings"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view3"
        android:background="@color/black"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/txt_settings"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/log_out"
        app:layout_constraintTop_toBottomOf="@id/view3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginStart="20dp"
        android:drawablePadding="6dp"
        android:text="Log Out"
        android:drawableStart="@drawable/ic_log_out"
        android:textSize="20sp"
        android:textColor="#C30A0A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>